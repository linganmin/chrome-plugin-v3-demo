{
  "manifest_version": 3,
  "name": "HR-Helper",
  "version": "0.0.1",
  "description": "招聘助手",
  "icons": {
    // "16": "icon16.png",
    // "32": "icon32.png",
    // "48": "icon48.png",
    // "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"], // TODO 更换为指定域名，matches 指定此内容脚本将被注入到哪些页面。
      "js": ["src/main.js"] // js 要注入匹配页面的 JavaScript 文件列表。选填
      // "css": ["src/main.css"],
    }
  ],
  "permissions": [
    "downloads",
    "contextMenus",
    "storage"
  ],
  "action": {
    "default_popup": "./src/options.html"
  },
  "background":{
    "service_worker": "src/service_worker.js"
  },
  "options_ui": {
    "page": "./src/options.html",
    "open_in_tab": false
  }
}
